{
    "env": {
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
		"ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "error",
			"tab",
			{
				"SwitchCase": 1
			}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
		],
		"no-console": [
			"off"
		],
		"eol-last": [
			"error",
			"always"
		]
    }
}
